{% extends 'base.html.twig' %}

{% block title %}Dodaj wiele produktów
{% endblock %}

{% block body %}
   <div class="container-fluid row">
      <div class="col-12 col-md-6 mx-auto bg-light mt-3 p-3">
         <h1 class="text-center fs-3 border-bottom border-dark border-2 pb-2 mb-2">Lista produktów</h1>

         {{ form_start(form) }}
         {{ form_errors(form) }}

         <table class="table table-sm mb-1">
            <thead>
               <tr>
                  <th>Nazwa</th>
                  <th>Opis</th>
                  <th>&nbsp;</th>
               </tr>
            </thead>
            <tbody id="products-container">
               {% for productForm in form.products %}
                  <tr class="product">
                     {{ form_widget(productForm.id ) }}
                     <td class="col-5">{{ form_widget(productForm.name ) }}</td>
                     <td class="col-5">{{ form_widget(productForm.description ) }}</td>
                     <td class="col-2">
                        <a href="#" class="btn btn-danger remove-product w-100">Usuń</a>
                     </td>
                  </tr>
               {% endfor %}
            </tbody>
            <tfoot>
               <tr>
                  <td colspan="3">
                     <a href="#" class="btn btn-primary add-product w-100s fw-bold">Dodaj nowe pole</a>
                  </td>
               </tr>
            </tfoot>
         </table>

         {{ form_widget(form.submit) }}
         {{ form_end(form) }}
      </div>
   </div>
{% endblock %}
{% block javascripts %}
   <script src="{{ asset('js/product.js') }}" type="text/javascript"></script>
   <script src="{{ asset('js/productBuilder.js') }}" type="text/javascript"></script>
   <script src="{{ asset('js/productManager.js') }}" type="text/javascript"></script>
{% endblock %}
